@using CinemaC.Models.Domain
@using CinemaC.Utils
@model CinemaC.Models.Domain.Genre[]

@{
    var genres = EnumUtil.GetValue<Genre>();
}

<div class="form-group">
    <label> Genre</label>
    <select multiple name="Genres" id="Genres" class="form-control">
        @foreach (var genre in genres)
        {
            <option value="@genre" @(Model!=null&& Model.Contains(genre) ? "selected" : string.Empty)>
                @genre
            </option>
        }
    </select>
</div>