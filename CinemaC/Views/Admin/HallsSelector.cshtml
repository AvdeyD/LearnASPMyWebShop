@using CinemaC.Models.Domain
@model int?

@{
    var hallsList = (Hall[])ViewData["HallsList"];
}

<div class="form-group">
    <label>Hall</label>
    <select name="HallId" id="HallId" class="form-control">
        @if (hallsList != null)
        {
            foreach (var hall in hallsList)
            {
                <option value="@hall.Id" @(Model != null && hall.Id == Model ? "selected" : string.Empty)></option>
                @hall.Name
            }
        }
    </select>
</div>