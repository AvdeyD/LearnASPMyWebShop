@using System.Web.Mvc.Html
@using CinemaC.Models
@model CinemaC.Models.Domain.Hall[]

@section SubNav
{
    @Html.Partial("SubNavigation", SubNavigationMenu.Halls)
}

<table>
    <tr>
        <th style="min-width: 30px">Id</th>
        <th>Name</th>
        <th style="min-width: 200px">Places</th>
        <th>Action</th>
    </tr>
    @foreach (var hall in Model)
    {
        <tr>
            <td>@hall.Id</td>
            <td>@hall.Name </td>
            <td>@hall.Places </td>
            <td> @Html.ActionLink("Edit", "EditHall", "Admin", new { hallId = hall.Id }, null)</td>
        </tr>
    }

</table>
