@using CinemaC.Models
@model CinemaC.Models.Domain.Movie[]

@section SubNav
{
    @Html.Partial("SubNavigation", SubNavigationMenu.Movies)
}

<table>
    <tr>
        <th style="min-width: 30px">Id</th>
        <th>Poster</th>
        <th style="min-width: 200px">Title</th>
        <th style="min-width: 300px">Description</th>
        <th>Action</th>
        <th>Action2</th>
    </tr>
    @foreach (var movie in Model)
    {
<tr>
    <td>@movie.Id</td>
    <td>
        <img style="max-height: 100px" src="@movie.ImgUrl" />
    </td>
    <td>@movie.Title</td>
    <td>@movie.Description</td>
    <td> @Html.ActionLink("Edit", "EditMovie", "Admin", new { movieId = movie.Id }, null)</td>
    <td> @Html.ActionLink("TimeSlots", "GetMovieTimesSlotsList", "Admin", new { movieId = movie.Id }, null)</td>
</tr>
    }


</table>
