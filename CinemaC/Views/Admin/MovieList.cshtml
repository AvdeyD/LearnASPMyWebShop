@using CinemaC.Models
@model CinemaC.Models.Domain.Movie[]

@section SubNav
{
    @Html.Partial("SubNavigation", SubNavigationMenu.Movies)
}

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Poster</th>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Id</td>
            <td>
                <img style="max-height: 100px" src="@movie.ImgUrl" />
            </td>
            <td>@movie.Title</td>
            <td>@movie.Description</td>
            <td >
                @Html.ActionLink("Edit", "EditMovie", "Admin", new {movieId = movie.Id}, new {@class = "btn btn-primary btn-block"})
                @Html.ActionLink("TimeSlots", "GetMovieTimesSlotsList", "Admin", new {movieId = movie.Id}, new {@class = "btn btn-primary btn-block"})
            </td>
        </tr>
    }
    </tbody>
</table>
