@using CinemaC.Models
@model TimeSlotGridRow[]


@section SubNav
{
    @Html.Partial("SubNavigation", SubNavigationMenu.TimeSlots)
}

<h2 class="admin-heading">TimeSlots</h2>
<div class="admin-add-btn">
    @Html.ActionLink("Add Time Slot", "AddTimeSlot", "Admin", null, new { @class = "btn btn-success btn-block" })
</div>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Hall</th>
            <th>Movie</th>
            <th>StartTime</th>
            <th>Cost</th>
            <th>Format</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var timeSlot in Model)
        {
            <tr>
                <td>@timeSlot.Id</td>
                <td>@timeSlot.Hall.Name</td>
                <td>@timeSlot.Movie.Title</td>
                <td>@timeSlot.StarTime</td>
                <td>@timeSlot.Cost</td>
                <td>@timeSlot.Format</td>
                <td> @Html.ActionLink("Edit", "EditTimeSlot", "Admin", new { timeslotId = timeSlot.Id }, new { @class = "btn btn-primary btn-block" })</td>
            </tr>
        }
    </tbody>
</table>

